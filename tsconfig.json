{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "sourceMap": true,
        "inlineSources": true,
        "downlevelIteration": true,

        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "importsNotUsedAsValues": "error",
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist/"
    },
    "include": ["src/**/*.ts"]
}
